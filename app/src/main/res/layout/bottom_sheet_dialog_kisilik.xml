<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleText"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KİŞİLİK"
        android:textSize="20sp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        />


    <TextView
        android:id="@+id/aciklikText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Açıklık"
        android:fontFamily="@font/roboto"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/sorumlulukText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Sorumluluk"
        android:fontFamily="@font/roboto"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:id="@+id/disaDonuklukText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Dışa Dönüklük"
        android:fontFamily="@font/roboto"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/uyumText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Uyum"
        android:fontFamily="@font/roboto"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:id="@+id/duyarlilikText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  Duyarlılık"
        android:fontFamily="@font/roboto"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/tumuText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  TÜMÜNÜ SEÇ"
        android:fontFamily="@font/roboto"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        />

</LinearLayout>